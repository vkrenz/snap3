<div class="articles container">
    {{#if isAdmin}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Hello, Admin! You can <em>add</em>, <em>edit</em> and <em>remove</em> articles!
            <hr>
            <ul>
                <li>Click the <i class="fa-solid fa-plus"></i> to <em>create</em> a new article</em></li>
                <li><em class="text-primary">Edit</em> an existing article using the <em><i class="fa-solid fa-pencil"></i> Edit Article</em> button</li>
                <li><em>Or,</em> <em class="text-danger">remove</em> an article using the <em><i class="fa-solid fa-trash-can"></i> Remove</em> button</li>
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {{/if}}
    {{#if alert}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{alert}}
            <a href="/articles"><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></a>
        </div>
    {{/if}}
    <div class="container d-flex justify-content-center align-items-center">
        <h1 class="text-muted display-6 text-center">Articles</h1>
        {{#if isAdmin}}
            <div class="d-inline-block p-2 border rounded-cirlce mx-4 rounded-circle shadow-lg add-article-btn cursor-pointer" data-toggle="tooltip" title="Create Article" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <i class="fa-solid fa-plus fa-xl text-muted"></i>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Create Article</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/articles/add-article" method="post" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <div class="col">
                                    <label for="articlePhoto" class="mb-2">Upload Article Photo</label>
                                    <input type="file" class="form-control" id="articlePhoto" name="articlePhoto" accept="image/*">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label for="name" class="col-form-label">Article Name</label>
                                    <input type="text" class="form-control" name="name" id="name" placeholder="Article Name">
                                </div>
                                <div class="col">
                                    <label for="author" class="col-form-label">Author Name</label>
                                    <input type="text" class="form-control" name="author" id="author" placeholder="John Doe">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label for="rating" class="col-form-label">Rating</label>
                                    <select class="custom-select form-control" id="rating" name="rating">
                                        <option selected disabled>Choose a rating (0-5)...</option>
                                        <option value="0">0</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col">
                                    <label for="content" class="col-form-label">Content</label> 
                                    <textarea name="content" id="content" class="form-control" cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>
    <hr />
    <div class="row">
        {{#if isAdmin}}
            {{#each articles}}
                <div class="col-sm-12 col-md-4 col-lg-3 d-flex align-items-stretch">
                    <div class="card my-4 mx-auto shadow-lg" style="width: 18rem;">
                        <img class="card-img-top" src="{{articlePhoto}}" alt="Card image cap">
                        <div class="card-body d-flex flex-column content-start justify-content-around">
                            <h5 class="card-title" style="
                            display: -webkit-box;
                            overflow: hidden;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            ">
                            {{this.name}}
                            </h5>
                            <small class="text-muted">{{this.author}}</small>
                            <br>
                            <span style="
                            display: -webkit-box;
                            overflow: hidden;
                            -webkit-line-clamp: 3;
                            -webkit-box-orient: vertical;
                            ">
                                {{this.content}}
                            </span>    
                            <a href="/articles/read?id={{this.articleID}}" class="btn btn-primary w-100 mt-4">Read More</a>
                            <p class="text-center mt-4">
                                <a href="/articles/edit-article?id={{this.articleID}}" class="text-decoration-none mx-2"><i class="fa-solid fa-pencil me-2"></i>Edit Article</a>
                                &middot;    
                                <a href="/articles/remove-article?id={{this.articleID}}"><button type="button" class="btn btn-danger mx-2"><i class="fa-solid fa-trash-can me-2"></i>Remove</button></a>
                            </p>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/if}}
        {{#unless isAdmin}}
            {{#each articles}}
                <div class="col-sm-12 col-md-4 col-lg-3 d-flex align-items-stretch">
                    <div class="card my-4 mx-auto shadow-lg" style="width: 18rem;">
                        <img class="card-img-top" src="{{articlePhoto}}" alt="Card image cap">
                        <div class="card-body d-flex flex-column content-start justify-content-around">
                            <h5 class="card-title" style="
                            display: -webkit-box;
                            overflow: hidden;
                            -webkit-line-clamp: 2;
                            -webkit-box-orient: vertical;
                            ">
                            {{this.name}}
