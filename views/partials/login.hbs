                <a class="btn btn-outline-primary btn-md mx-2 login-btn active" href="/user/login">Login</a>
            </li>
        </ul>
        </div>
    </div>
</nav>
{{!-- Navbar End --}}

<div class="container-fluid d-flex justify-content-center align-items-center" id="gradient-background">
    <form action="/user/auth/login" method="post" class="form-signin p-sm-5 shadow-lg">
        {{#if err}}
            {{#each err}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    {{this.msg}}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {{/each}}
        {{/if}}
        {{#if Err}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                {{{Err}}}
                <a href="/logins"><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></a>
            </div>
        {{/if}}
        {{#if alert}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{{alert}}}
                <a href="/login"><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></a>
            </div>
        {{/if}}
        <h2 class="text-center display-6 text-muted m-5">LOGIN</h2>
        <div class="mb-3">
            <label for="username" class="form-label text-muted">Username</label>
            <input type="text" class="form-control" name="username" {{#if passedUsername}}value="{{passedUsername}}"{{/if}}{{#if email}}value="{{passedEmail}}"{{/if}} placeholder="jdoe">
            <div class="invalid-feedback">
                Please enter your username or email.
            </div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label text-muted">Password</label>
            <input type="password" class="form-control" name="password" placeholder="************">
            <div class="invalid-feedback">
                Please enter your password.
            </div>
        </div>
        {{!-- TODO: Implement 'remember-me' --}}
        <div class="mb-3 form-check mb-4">
            <label class="form-check-label" for="remember-me">Remember Me</label>
            <input type="checkbox" class="form-check-input" name="remember-me" value="remember-me">
        </div>
        <button type="submit" class="btn-hover gradient my-5 shadow-lg" align="center">Sign In</button>
        <div class="mb-3 form-check">
            <p class="text-muted" align="center">Don't have an account? <a href="/user/register" style="text-decoration:none" class="link-register">Sign Up</a></p>
        </div>
    </form>
</div>

